# BTT Auto Manager Environment Variables
# Copy this file to .env and modify as needed

# Webhook Server Configuration
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=5680

# Python Configuration
PYTHONUNBUFFERED=1

# Docker Configuration
DOCKER_IMAGE=ghcr.io/craigst/btt-auto-manager:main
CONTAINER_NAME=btt-auto-manager

# Volume Paths (relative to docker-compose.yml location)
DB_PATH=./db
LOGS_PATH=./logs
CONFIG_PATH=./btt_config.json

# ADB Configuration
ADB_DEVICE_PATH=/dev/bus/usb

# Application Configuration
AUTO_ENABLED=true
INTERVAL_MINUTES=20
WEBHOOK_ENABLED=true

# Development/Production Mode
ENVIRONMENT=production
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/btt-auto-manager.log

# Security Configuration (optional)
# WEBHOOK_SECRET=your-secret-key-here
# API_KEY=your-api-key-here 